package com.javaio;
 
import java.io.File;
 
public class FileExample3 {
  public static void main(String[] args) {
    int count=0;
    File f=new File("E:\\MariaFolder");
    
    String[] s=f.list();
    for(String s1:s) {
      File f1=new File(f,s1);
      if(f1.isDirectory()) {
        //if(f1.isFile()) {
          count++;
        System.out.println(s1);
        }
      
      
    }
    System.out.println(count);
  }
}


